pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'g++ -c hello.cpp'
                sh 'g++ -o hello hello.cpp'
                echo 'build stage successfull'
            }
        }
        stage('Test'){
            steps{
                sh './hello'
                echo 'Test stage executed successfully'
            }
        }
        stage('Deploy'){
            steps{
                echo 'Deployed Successfully'
            }
        }
    }
    post{
        failure{
            echo 'Pipeline Failed'
        }
    }
}
